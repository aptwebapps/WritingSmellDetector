{
    "ruleset": "LaTeX punctuation",
    "type": "re",
    "flags": "I",
    "rules": [
        {
            "name": "No Space Prior to Citation",
            "re": "\\w \\\\cite"
        },
        {
            "name": "No space before parentheses",
            "re": "\\w\\("
        },
        {
            "name": "Punctuation mark outside quotation mark",
            "re": "\\w+''[.?,]"
        },
        {
            "name": "Dashes",
            "prefix": "\\w",
            "suffix": "\\w",
            "re": [
                    "---",
                    " --- ",
                    " ---",
                    "---"
            ]
        }
    ]
}





