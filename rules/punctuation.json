{
    "ruleset": "Punctuation",
    "type": "re",
    "flags": "I",
    "rules": [
        {
            "name": "No space before parentheses",
            "re": "\\w\\("
        },
        {
            "name": "No Space after period",
            "re": "\\.\\w+"
        },
        {
            "name": "Multiple spaces after period",
            "re": "\\.  +\\w+"
        },
        {
            "name": "Serial comma",
            "re": ", \\w+, and"
        },
        {
            "name": "No serial comma",
            "re": ", \\w+ and"
        }
    ]
}





